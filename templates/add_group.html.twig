{% extends 'base.html.twig' %}

{% block title %}Окно работы с записями{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        <h1>Добавление\изменение записи</h1>

        {{ form_start(groupForm) }}
        {{ form_row(groupForm.name, {
            label: 'Имя Группы'
        }) }}
        {{ form_row(groupForm.description, {
            label: 'Описание'
        }) }}
        {{ form_row(groupForm.priority, {
            label: 'Приоритет(больше-выше в списке)'
        }) }}

        <button type="submit" class="btn">Сохранить</button>
        {{ form_end(groupForm) }}

        <form action="{{ path('groups') }}" method="post">
            <button type="submit">Вернуться к списку групп</button>
        </form>
    </div>

{% endblock %}
